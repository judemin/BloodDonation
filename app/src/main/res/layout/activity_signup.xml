<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity"
    android:background="#FFFFFF">

    <ImageButton
        android:id="@+id/btn_signn"
        android:layout_width="167dp"
        android:layout_height="79dp"
        android:layout_alignStart="@+id/btn_signIp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="139dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="140dp"
        android:adjustViewBounds="true"
        android:background="@drawable/signup"
        android:onClick="singUp"
        android:padding="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/signup" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="226dp"
        android:layout_marginRight="226dp"
        app:srcCompat="@drawable/icon" />

    <ImageButton
        android:id="@+id/btn_signIp"
        android:layout_width="167dp"
        android:layout_height="79dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="139dp"
        android:adjustViewBounds="true"
        android:background="@drawable/login"
        android:onClick="signIn"
        android:padding="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/login" />

    <ImageView
        android:id="@+id/tv_email"
        android:layout_width="78dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="197dp"
        android:layout_marginRight="50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/email" />

    <EditText
        android:id="@+id/et_eamil"
        android:layout_width="264dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_email"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="50dp"
        android:backgroundTint="@android:color/black"
        android:inputType="textEmailAddress" />

    <ImageView
        android:id="@+id/tv_password"
        android:layout_width="78dp"
        android:layout_height="33dp"
        android:layout_below="@id/et_eamil"
        android:layout_marginLeft="53dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/password" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_password"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:backgroundTint="@android:color/black"
        android:inputType="textPassword" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="170dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-120dp"
        android:layout_marginBottom="19dp"
        android:layout_toStartOf="@+id/tv_email"
        android:onClick="devInf"
        app:srcCompat="@drawable/school_logo" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="167dp"
        android:layout_height="22dp"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="-3dp"
        android:layout_toEndOf="@+id/tv_email"
        app:srcCompat="@drawable/ci" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="188dp"
        android:layout_height="78dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-13dp"
        android:layout_marginTop="88dp"
        android:layout_toEndOf="@+id/btn_signIp"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/welcome" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="144dp"
        android:layout_toEndOf="@+id/btn_signIp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/chara2" />


</RelativeLayout>